{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "params": [
    {
      "name": "categorySelect",
      "select": {
        "type": "point",
        "fields": ["category"],
        "value": "A",
        "on": "click"
      }
    }
  ],
  "data": {
    "values": [
      {"category": "A", "value": 10},
      {"category": "B", "value": 20},
      {"category": "C", "value": 30}
    ]
  },
  "layer": [
    {
      "mark": "arc",
      "encoding": {
        "theta": {
          "field": "value",
          "type": "quantitative"
        },
        "color": {
          "field": "category",
          "type": "nominal"
        }
      },
      "transform": [
        {
          "filter": "datum.category === categorySelect.category"
        }
      ]
    },
    {
      "mark": "bar",
      "encoding": {
        "x": {
          "field": "category",
          "type": "nominal"
        },
        "y": {
          "field": "value",
          "type": "quantitative"
        }
      },
      "transform": [
        {
          "filter": "datum.category === categorySelect.category"
        }
      ]
    },
    {
      "mark": "bar",
      "encoding": {
        "x": {
          "field": "category",
          "type": "nominal"
        },
        "y": {
          "field": "value",
          "type": "quantitative"
        }
      },
      "transform": [
        {
          "filter": "datum.category === categorySelect.category"
        }
      ]
    }
  ]
}
