
{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "padding" : 5,
    "autosize" :{
        "type": "pad",
        "contains": "content"
    },
    "config": {
        "title": {
            "fontSize" : 28  
        },
        "axis": {
            "titleFontSize" : 24,
            "labelFontSize" :16
        },
        "view": {
            "stroke" : "transparent",
            "discreteWidth": {"step": 10}
            
        },
        "legend": {
            "titleFontSize": 26
        }
